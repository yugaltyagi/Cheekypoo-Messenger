<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#2196F3" /> <!-- Blue -->

    <!-- Rounded corners -->
    <corners android:radius="40dp" />

    <!-- Button padding -->
    <padding
        android:left="16dp"
        android:top="10dp"
        android:right="16dp"
        android:bottom="10dp" />

    <!-- Border (optional) -->
    <stroke
        android:width="2dp"
        android:color="#1976D2" />
</shape>
